extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="name", type="text", value=loggedInUser.name, required)
        input(name="email", type="email", value=loggedInUser.email, required)
        input(name="username", type="text", value=loggedInUser.username, required)
        input(name="location", type="text", value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr 
            a(href="change-password") Change Password &rarr;