extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST" action="/videos/upload", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", id="video", name="video" required)
        input(placeholder="Tilte", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")